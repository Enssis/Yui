<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#FFFFFF">

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="561dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="332dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="113dp">

            <Button
                    android:text="@string/edt_button_text"
                    android:layout_height="match_parent"
                    android:id="@+id/edt_button"
                    android:textSize="30sp"
                    android:textColor="@color/home_button_color"
                    android:layout_width="@dimen/home_button_width"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/home_button_fond"/>

            <Button
                    android:text="@string/mail_button_text"
                    android:layout_width="@dimen/home_button_width"
                    android:layout_height="match_parent"
                    android:id="@+id/mail_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="30sp"
                    android:textColor="@color/home_button_color"
                    android:background="@drawable/home_button_fond"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#BF0A0A"/>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="113dp">

            <Button
                    android:text="@string/map_button_text"
                    android:layout_height="match_parent"
                    android:id="@+id/map_button"
                    android:textSize="30sp"
                    android:textColor="@color/home_button_color"
                    android:layout_width="@dimen/home_button_width"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/home_button_fond"/>

            <Button
                    android:text="@string/moodle_button_text"
                    android:layout_height="match_parent"
                    android:id="@+id/moodle_button"
                    android:textSize="30sp"
                    android:textColor="@color/home_button_color"
                    android:layout_width="@dimen/home_button_width"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/home_button_fond"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </TableLayout>

    <ImageView
            android:layout_width="74dp"
            android:layout_height="67dp"
            app:srcCompat="@drawable/logo_yui_v1"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="logo"/>
</androidx.constraintlayout.widget.ConstraintLayout>